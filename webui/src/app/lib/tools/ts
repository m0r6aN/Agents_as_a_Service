import { supabase } from './supabase'

export interface Tool {
  id: string
  name: string
  description: string
  type: string
}

export async function getTools(): Promise<Tool[]> {
  const { data, error } = await supabase
    .from('tools')
    .select('*')
    .order('name')

  if (error) {
    console.error('Error fetching tools:', error)
    return []
  }

  return data
}